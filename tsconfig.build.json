{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "bundle/dts",
    "emitDeclarationOnly": true,
    "module": "esnext",
    "target": "ES2017",
    "lib": [ "es6", "dom" ],
    "sourceMap": true,
    "jsx": "react",
    "declarationMap": true,
    "moduleResolution": "node",
    "rootDir": "components",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  
}
